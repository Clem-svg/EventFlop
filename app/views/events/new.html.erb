
<% if @event.errors.any? %>
  <div class="alert alert-danger text-center" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
    <%= form_with(model: @event, local: true) do |form| %>

      <div class="form-group">
        <%= form.label :On_commence_quand_? %>
        <%= form.datetime_field :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :on_y_reste_combien_de_temps_? %>
        <%= form.number_field :duration, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :comment_on_appelle_ton_event_? %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :tell_me_more %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :how_much_do_you_want_? %>
        <%= form.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :on_va_où_? %>
        <%= form.text_field :location, class: "form-control" %>
      </div>

        <div class="actions mt-5">
        <%= form.submit "C'est parti pour le show", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>

